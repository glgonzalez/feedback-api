{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "comma-dangle": 0,
        "indent": ["warn", 2],
        "no-shadow": 0,
        "no-unused-vars": 1,
        "func-names": 0,
        "prefer-arrow-callback": 0
      }
}